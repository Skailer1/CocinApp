<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cocinerosapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CocinappAppilcation"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.usuario.UsuarioActivity"
            android:parentActivityName=".ui.login.LoginActivity">

        </activity>
        <activity android:name=".ui.MenuActivity"
            />
        <activity
            android:name=".ui.pedido.DialogPedidoActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity
            android:name=".ui.registro.RegistroActivity"
            android:parentActivityName=".ui.usuario.UsuarioActivity" />
        <activity
            android:name=".ui.pedido.PedidoActivity"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>